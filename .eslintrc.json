{
    "extends": "airbnb",
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/jsx-no-bind": [{
          "ignoreRefs": false,
          "allowArrowFunctions": false,
          "allowFunctions": false,
          "allowBind": true
      }],
      "jsx-a11y/anchor-is-valid": [ "error", {
        "components": [ "Link" ],
        "specialLink": [ "to" ]
      }]
    }
}
